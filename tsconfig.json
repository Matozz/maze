{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [    
    "build",
    "dist",
    "node_modules",
    "rollup.config.js",
    "src/stories",
  ],
  "include": ["src/**/*","src/typed-svg.d.ts","src/typed-css.d.ts"],
}